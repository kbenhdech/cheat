datatable
=========

@datatable = (id) ->
  $(id).dataTable
    aaSorting: [[1, "asc"]]
    bPaginate: true
    sPaginationType: "bootstrap"
    bLengthChange: false
    bFilter: true
    bSort: true
    bInfo: true
    bAutoWidth: false
    oLanguage:
      sUrl: Messages('js.datatable.conf.lang')
